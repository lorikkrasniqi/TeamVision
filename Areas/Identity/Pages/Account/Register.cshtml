@page
@using VisionStore.Models
@model RegisterViewModel
<link rel="stylesheet" href="~/css/register.css">
<div class="signup-form">
    @*asp-route-returnUrl="@Model.ReturnUrl"*@
    <form id="registerForm" method="post" asp-controller="Account" asp-action="Register">

        <h2>Sign Up</h2>
        <p>Please fill in this form to create an account!</p>
        <hr>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <span class="fa fa-user"></span>
                    </span>
                </div>
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" autocomplete="username" placeholder="First Name" required="required" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <span class="fa fa-user"></span>
                    </span>
                </div>
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" autocomplete="username" placeholder="Last Name" required="required" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <span class="fa fa-user"></span>
                    </span>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" placeholder="Email Address" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button id="registerSubmit" type="submit" class="btn-dark btn-lg w-100 ">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

