@model IEnumerable<VisionStore.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container text-center">
    <h1 class="text-center">Categories</h1>
    <h3 class="text-center">List of all Categories</h3>
</div>


<div class="admin-container  row flex-column align-items-center justify-content-center">
    <p>
        <a asp-action="Create" class="btn btn-success mt-5">Add Category</a>
    </p>

    <form method="get" asp-action="Index" class="mb-2 mt-3">
        <p>
            <input type="search" placeholder="Enter A Category....." value="@ViewData["GetCategoryDetails"]" name="CategorySearch" style="width:300px;" />
            <input type="submit" value="Search" class="btn btn-success" />
        </p>
    </form>
    <table class="table col-8 table">
        <thead class="thead-dark text-white">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>CRUD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>