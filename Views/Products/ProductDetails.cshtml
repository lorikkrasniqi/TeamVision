@model VisionStore.Models.Products
@{
    int i = 0;
}
@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<br />
@using (@Html.BeginForm())
{
    


<div class="admin-container row flex-column align-items-center justify-content-center">
    <h3>Details of product</h3>
  
      <dl class="row col-9">
        <div class="col-lg-6 col-md-6 col-sm-6">
           @*  <img src="~/img/@Model.ImageUrl" style="width:450px; height:350px;"/>*@
        </div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
              @foreach(var item in Model.ProductImages)
        {
                        i++;
                        var active = i == 1 ? "active" : "";
                        <div class="carousel-item @active">
      <img src='~/img/@item.Url' style="width:600px; height:450px; src="..." alt="First slide">
    </div>
        }
   
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

        <div class="col-lg-4 col-md-4 col-sm-4">
        <br />
        <br />
        <br />
        <dd class = "col-sm-10">
          <strong>Product:</strong>   @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class = "col-sm-10">
          <strong>Description:</strong>    @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class = "col-sm-10">
        <strong>Price:</strong>   @Html.DisplayFor(model => model.Price) $
        </dd>
        <dd class = "col-sm-10">
        <strong>Quantity:</strong>  @Html.DisplayFor(model => model.Quantity)
        </dd>

        <br />
        <br />
        <br />
        <br />
        <br />
   
            <div class="bottom col-10 align-self-end row justify-content-end">
      <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.ProductId">Add To Cart</a>
     </div>
    </dl>
           
        </div>

     

    
 
 

}



 