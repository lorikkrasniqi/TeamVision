<script src="~/js/main.js"></script>
<!-- Js Plugins -->
</header>



<body>
    <header class="header-section">
        <header class="header-section">
            <div class="header-top">
                <div class="container">
                    <div class="ht-left">


                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="mail-service">
                                <i class=" fa fa-envelope"></i>
                                <a id="manage" class="text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

                                <a asp-action="UserData" class="text-dark" asp-controller="user">| Profile</a>
                            </div>
                        }
                    </div>

                    <div class="ht-right">
                        <div class="lan-selector">
                            <select class="language_drop" name="countries" id="countries" style="width:300px">
                                <option value='yt' data-image="img/flag-1.jpg" data-imagecss="flag yt"
                                        data-title="English">English</option>
                                <option value='yu' data-image="img/flag-2.jpg" data-imagecss="flag yu"
                                        data-title="Bangladesh">German </option>
                            </select>
                        </div>
                        <div class="top-social">
                            <a href="https://www.facebook.com/starlabs.dev" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="https://www.instagram.com/starlabs.dev/" target="_blank"><i class="fa fa-instagram"></i></a>
                            <a href="https://twitter.com/StarLabsDev" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="#"><partial name="_LoginPartial" /></a>


                        </div>
                    </div>
                </div>
            </div>
            <div class="nav-item">
                <div class="container">
                    <nav class="nav-menu mobile-menu">
                        <ul>
                            <li class=""><a asp-controller="Home" , asp-action="Index">Home</a></li>
                            <li>
                                <a asp-controller="Products" , asp-action="Index">Products</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="Products" , asp-action="Add">Add products</a></li>
                                </ul>
                            </li>
                            <li>
                                <a asp-controller="Categories" , asp-action="Index">Categories</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="Categories" , asp-action="Create">Add categories</a></li>
                                </ul>
                            </li>
                             <li>
                                <a asp-controller="ContactUs" , asp-action="Index">Contact us</a>
                            </li>

                        </ul>

                    </nav>
                    <div id="mobile-menu-wrap"></div>
                </div>
            </div>
        </header>
</body>


@RenderBody()


<footer class="footer-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="footer-left">
                    <div class="footer-logo">
                        <a href="#">StarLabs</a>
                    </div>
                    <ul>
                        <li>Address: Ukshin Hoti Pristina, Kosovo</li>
                        <li>Phone: +00 00.000.000</li>
                        <li>Email: info@starlabspro.com</li>
                        <li>Website : http://www.starlabs.dev/</li>
                    </ul>
                    <div class="footer-social">
                        <a href="https://www.facebook.com/starlabs.dev" target="_blank"><i class="fa fa-facebook"></i></a>
                        <a href="https://www.instagram.com/starlabs.dev/" target="_blank"><i class="fa fa-instagram"></i></a>
                        <a href="https://twitter.com/StarLabsDev" target="_blank"><i class="fa fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 offset-lg-1">
                <div class="footer-widget">
                    <h5>Information</h5>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Checkout</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Serivius</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="footer-widget">
                    <h5>My Account</h5>
                    <ul>
                        <li><a href="#">My Account</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Shopping Cart</a></li>
                        <li><a href="#">Shop</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="newslatter-item">
                    <h5>Join Our Newsletter Now</h5>
                    <p>Get E-mail updates about our latest shop and special offers.</p>
                    <form action="#" class="subscribe-form">
                        <input type="text" placeholder="Enter Your Mail" />
                        <button type="button">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright-reserved">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="copyright-text">

                        Copyright &copy;2022 All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://starlabs.dev" target="_blank">VisionStore</a>
                    </div>
                    <div class="payment-pic">
                        <img src="img/payment-method.png" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
</html>