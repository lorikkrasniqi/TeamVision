@model VisionStore.Models.UserViewModel; 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<link rel="stylesheet" href="~/css/register.css">
<div class="signup-form">
   <form asp-action="profile" method="post">
		<h2>Update Profile</h2>
		<p>Please fill in this form to update your account!</p>
		<hr>
	 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   <label asp-for="FirstName"></label>
        <div class="form-group">
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<span class="fa fa-user"></span>
					</span>                    
				</div>
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
			</div>
        </div>
   <label asp-for="LastName"></label>
    <div class="form-group">
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<span class="fa fa-user"></span>
					</span>                    
				</div>
            <div class="form-floating">
                <input asp-for="LastName" class="form-control"  placeholder="Last Name"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
			</div>
        </div>
  <label asp-for="Email"></label>
         <div class="form-group">
			<div class="input-group">
				<div class="input-group-prepend">
					<span class="input-group-text">
						<span class="fa fa-user"></span>
					</span>                    
				</div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="Email Address" required="required" />
				 <span asp-validation-for="Email" class="text-danger"></span>
            </div>
			</div>
        </div>
    
    
		<div class="form-group">
                
            <button id="updateSubmit" type="submit" value="Update"class="btn-dark btn-lg w-100">Update</button>
       
    </div>
    	<div class="form-group">
            <div class="form-label-group">
                <span class="text-success">@ViewData["message"]</span>
            </div>
    </div>
    </form>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}