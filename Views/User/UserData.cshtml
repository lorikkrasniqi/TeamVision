 

@model VisionStore.Areas.Identity.Data.ApplicationUser;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<link rel="stylesheet" href="~/css/register.css">
<div class="signup-form">
		<h2>User Profile</h2>
		 <h5>Personal Info</h5>
		<hr>

         <div class="form-group">
			<div class="input-group">
            <div class="form-floating">
                      <label>Username:</label> <label> @Html.DisplayFor(model => model.UserName) </label>   
            </div>
			</div>
        </div>

           <div class="form-group">
			<div class="input-group">
            <div class="form-floating">
                      <label>Email:</label> <label> @Html.DisplayFor(model => model.Email) </label>   
            </div>
			</div>
        </div>
            <div class="form-group">
			<div class="input-group">
            <div class="form-floating">
                <label>First Name:</label> <label> @Html.DisplayFor(model => model.FirstName) </label>   
            </div>
			</div>
        </div>

            <div class="form-group">
			<div class="input-group">
            <div class="form-floating">
                <label>Last Name:</label> <label> @Html.DisplayFor(model => model.LastName) </label>   
            </div>
			</div>
        </div>
        	<hr>    
		<div class="form-group">
                
      <button type="button" class="btn btn-primary"> <a asp-action="profile" asp-controller="user">Update Your Profile</a> </button>
       
    </div>
    	 
   
</div> 

 